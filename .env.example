SECRET_KEY=replace_me_with_a_secret_key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Postgres
DB_NAME=velkilist_db
DB_USER=velki_user
DB_PASSWORD=velki_pass
DB_HOST=db
DB_PORT=5432

# Redis / Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# CORS (add your frontend origin)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Provider toggles (DEMO by default)
CASINO_USE_DEMO=1
SPORTS_USE_DEMO=1

# Optional: Production flags
DJANGO_PRODUCTION=0
SECURE_HSTS_SECONDS=31536000

# Currency
SUPPORTED_CURRENCIES=BDT,USD,EUR
DEFAULT_CURRENCY=BDT

# Risk limits (values are cents)
RISK_MAX_STAKE_PER_BET_CENTS=1000000
RISK_MAX_DAILY_STAKE_CENTS=5000000
